{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "ES2016",
        "lib": ["es7"],
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": false,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "typesRoots": [
        "./typings",
        "../node_modules/@types"
    ],
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "dist/**/*"
    ]
}
